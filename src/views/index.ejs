<% include ./partials/header %>

<section class="usa-hero">
    <div class="usa-grid">
        <div class="usa-hero-callout usa-section-dark">
        <h2>Making the law accessible to all</h2>
        <p>A platform for law, where you can easily access the latest legal documents and track their changes.</p>
        <a class="usa-button" href="/about">Learn about what we do</a>
        </div>
    </div>
</section>

<section class="usa-section">
    <div class="usa-grid">
        <div class="usa-media_block">
            <div class="usa-media_block-body">
            <h3><a href="/law/federal/constitution">United States Constitution</a></h3>
            </div>
        </div>

        <% states.forEach((state) => { %>
        <div class="usa-width-one-fourth usa-media_block">
            <div class="usa-media_block-body">
                <p><a href="/law/<%= state.toLowerCase().replace(" ", "-") %>/constitution"><%= state %> Constitution</a></p>
            </div>
        </div>
        <% }); %>

        <div class="usa-width-one-whole usa-media_block">
            <div class="usa-media_block-body">
            <p>We are working to add more documents. If you would like to help, please <a href="#contact">contact us</a>.</p>
            </div>
        </div>
    </div>
</section>

<% include ./partials/footer %>
